<project name="builder" default="launchmaven">
	<target name="init">
		    <property name="m2.home" value="${basedir}/maven/install/apache-maven-2.0.9" />
		    <property name="install.path" value="${basedir}/" />
		    <property name="eclipse.home" value="/usr/eclipse" />
		    <property name="java.home" value="${java.home}" />
	</target>
	<target name="launchmaven" depends="init">
		<exec executable="${basedir}/maven/install/apache-maven-2.0.9/bin/mvn">
			<env key="M2_HOME" value="${m2.home}" />
			<env key="INSTALL_PATH" value="${install.path}" />
			<env key="ECLIPSE_HOME" value="${eclipse.home}" />
			<env key="JAVA_HOME" value="${java.home}" />
			<arg value="keytool:clean" />
			<arg value="keytool:genkey" />
			<arg value="clean" />
			<arg value="install" />
		</exec>
	</target>
	<target name="install3rdpartyjar" depends="init">
		<exec executable="${basedir}/maven/install/apache-maven-2.0.9/bin/mvn.bat">
			<env key="M2_HOME" value="${m2.home}" />
			<env key="INSTALL_PATH" value="${install.path}" />
			<env key="ECLIPSE_HOME" value="${eclipse.home}" />
			<env key="JAVA_HOME" value="${java.home}" />
			<arg value="install:install-file" />
			<arg value="-Dfile=${basedir}/lib/org.eclipse.swt.win32.win32.x86_3.3.2.v3347a.jar" />
			<arg value="-DgroupId=org.eclipse.plugins" />
			<arg value="-DartifactId=org.eclipse.swt.win32.win32_x86" />
			<arg value="-Dversion=3.3.2.v3347a" />
			<arg value="-Dpackaging=jar" />
			<arg value="-e" />
		</exec>
	</target>
</project>